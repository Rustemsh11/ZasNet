# Production Environment Variables для ZasNet
# ИНСТРУКЦИЯ: Скопируйте этот файл в .env и измените значения!
# cp env.production.template .env
# nano .env

# ============================================
# Database Configuration
# ============================================
POSTGRES_PASSWORD=ИЗМЕНИТЕ_НА_СИЛЬНЫЙ_ПАРОЛЬ

# ============================================
# JWT Configuration
# ============================================
# Минимум 32 символа, случайная строка
# Генерация: openssl rand -base64 64
JWT_SECRET_KEY=ИЗМЕНИТЕ_НА_СЛУЧАЙНУЮ_СТРОКУ_МИНИМУМ_32_СИМВОЛА

# ============================================
# Telegram Bot Configuration (опционально)
# ============================================
# Получите токен у @BotFather в Telegram
TELEGRAM_BOT_TOKEN=

# ID канала или чата для уведомлений
TELEGRAM_CHANNEL_ID=

# Секретный ключ для webhook
TELEGRAM_WEBHOOK_SECRET=

